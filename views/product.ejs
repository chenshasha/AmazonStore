<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Amazon Store || Product Page</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Shop Books || Book Detail </h1>
		<strong>Shopper</strong>: <%= user.local.email %><br>
		<a href="/viewcart" class="btn btn-default btn-sm">Cart   </a>
        <a href="/profile" class="btn btn-default btn-sm">Account</a>
        <a href="/store" class="btn btn-default btn-sm">Store  </a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>



    <div class="row text-center">
      <form action="/cart" method="post" accept-charset="utf-8">
        <strong >Book Title</strong>: <%= books.title %><br>
        <br>
        <strong>Book Author</strong>: <%= books.author %><br>
        <br>
        <strong>Year</strong>: <%= books.year %><br>
        <br>
        <strong>Language</strong>: <%= books.language %><br>
        <br>
        <strong>Current Stock</strong>: <%= books.stock %><br>
        <br>
        <strong>Price</strong>: <%= books.price %><br>
        <br>
        <button type="submit" name="addBookID" value = "<%= books.id%>" class="btn btn-sm">Add to Cart</button>

      </form>
    </div>















</div>
</body>
</html>
